[Trigger]
Operation = Upgrade
Type = Package
Target = linux
Target = linux-hardened
Target = linux-lts
Target = linux-zen


[Action]
Description = Save Linux kernel modules
When = PreTransaction
Depends = rsync
Exec = /bin/sh -c 'KVER="${KVER:-$(uname -r)}"; if test -e "/lib/modules/${KVER}"; then rsync -AHXal --delete-after "/lib/modules/${KVER}" /lib/modules/backup/; fi'
